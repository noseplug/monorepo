<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_report_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.noseplugapp.android.ReportFormDateTimeActivity"
    tools:showIn="@layout/activity_report_form">

    <TextView
        android:text="@string/date_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_below="@+id/date"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:focusableInTouchMode="true"
        android:id="@+id/select_date"/>

    <TextView
        android:text="@string/time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_date"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/time_start"/>

    <!--
        timePickerMode isn't present on API min 14 or 15, not until 23. Since the fixes add too
        much complexity and the report form must be reworked anyway, the lint warning about this is
        being suppressed for both TimePickers.
    -->
    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"

        tools:ignore="UnusedAttribute"
        android:timePickerMode="spinner"

        android:layout_below="@+id/time_start"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timePicker"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/time_end"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker2"

        tools:ignore="UnusedAttribute"
        android:timePickerMode="spinner"

        android:layout_below="@+id/time_end"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/time_start"
        android:layout_below="@+id/timePicker2"
        android:layout_alignEnd="@+id/time_start"
        android:id="@+id/location_label" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:id="@+id/touchInterceptor"
        android:layout_height="fill_parent">

    </FrameLayout>
</RelativeLayout>
