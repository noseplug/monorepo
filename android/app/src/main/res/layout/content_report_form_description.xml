<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_report_form_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gatech.cs.environmentalodors.ReportFormDescriptionActivity"
    tools:showIn="@layout/activity_report_form_description">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/odor_type_prompt"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/type_spinner"
        android:layout_alignTop="@+id/type"
        android:layout_toRightOf="@+id/type"
        android:layout_toEndOf="@+id/type" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="Any additional comments..."
        android:id="@+id/comments"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="106dp"
        android:layout_alignLeft="@+id/affect"
        android:layout_alignStart="@+id/affect" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="This affects me in that..."
        android:id="@+id/affect"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/strength"
        android:layout_alignStart="@+id/strength" />

    <TextView
        android:text="Strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strength"
        android:layout_above="@+id/affect"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type"
        android:layout_marginBottom="62dp" />

    <TextView
        android:text="Odor Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/type"
        android:layout_above="@+id/strength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp" />

    <Spinner
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/strength_spinner"
        android:layout_below="@+id/type"
        android:layout_alignLeft="@+id/type_spinner"
        android:layout_alignStart="@+id/type_spinner" />

</RelativeLayout>
