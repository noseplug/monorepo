<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edu.gatech.cs.environmentalodors.ReportFormDateTimeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            />

    </android.support.design.widget.AppBarLayout>

    <TableLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_report_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="edu.gatech.cs.environmentalodors.ReportFormDateTimeActivity"
        tools:showIn="@layout/activity_report_form">

        <TableRow>
            <TextView
                android:text="@string/date_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:id="@+id/select_date"/>
        </TableRow>

        <TextView
            android:text="@string/time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_start"/>

        <!--
            timePickerMode isn't present on API min 14 or 15, not until 23. Since the fixes add too
            much complexity and the report form must be reworked anyway, the lint warning about this is
            being suppressed for both TimePickers.
        -->
        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker"
            tools:ignore="UnusedAttribute"
            android:timePickerMode="spinner"
            />

        <TextView
            android:text="@string/time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_end"
            />

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker2"
            tools:ignore="UnusedAttribute"
            android:timePickerMode="spinner"
            />

        <FrameLayout
            android:layout_width="fill_parent"
            android:id="@+id/touchInterceptor"
            android:layout_height="fill_parent"
            ></FrameLayout>
    </TableLayout>

    <Button
        android:id="@+id/right_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/right_arrow" />

</android.support.design.widget.CoordinatorLayout>
